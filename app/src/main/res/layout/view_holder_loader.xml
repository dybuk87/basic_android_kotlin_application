<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/constraint_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

    <pl.dybuk.posttest.ui.view.CircleInitialView
            android:id="@+id/view_holder_loader_letter"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/bg_circle_initial_view"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toRightOf="@+id/view_holder_loader_letter"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/view_holder_loader_letter"
            app:layout_constraintWidth_default="spread">


        <pl.dybuk.posttest.ui.view.ShimmerView
                android:layout_width="65dp"
                android:layout_height="14dp"
                android:layout_marginEnd="4dp"
                android:layout_marginRight="4dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"/>

        <pl.dybuk.posttest.ui.view.ShimmerView
                android:id="@+id/account_history_base_element_value"
                android:layout_width="39dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />
    </RelativeLayout>


    <pl.dybuk.posttest.ui.view.ShimmerView
            android:layout_width="46dp"
            android:layout_height="12dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@id/view_holder_loader_letter"
            app:layout_constraintLeft_toRightOf="@+id/view_holder_loader_letter"/>

    <pl.dybuk.posttest.ui.view.ShimmerView
            android:layout_width="22dp"
            android:layout_height="12dp"
            app:layout_constraintBottom_toBottomOf="@id/view_holder_loader_letter"
            app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>